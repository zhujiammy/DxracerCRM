<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:background="@color/gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:background="@color/white"
                android:id="@+id/Delquotation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="删除报价"
                android:textColor="@color/red"
                android:textSize="16sp" />
            <TextView
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                />
            <TextView
                android:gravity="center"
                android:background="@color/white"
                android:id="@+id/Invalidquotation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="作废报价"
                android:textColor="@color/blue1"
                android:textSize="16sp" />
            <TextView
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                />
            <TextView
                android:gravity="center"
                android:id="@+id/Customerconfirmation"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue1"
                android:text="客户确认"
                android:textSize="16sp" />
            <TextView
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                />
            <TextView
                android:gravity="center"
                android:id="@+id/Quotationcompleted"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue1"
                android:text="报价完成"
                android:textSize="16sp"/>
            <TextView
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                />
            <TextView
                android:visibility="gone"
                android:gravity="center"
                android:background="@color/white"
                android:id="@+id/addQuotation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="新增报价单"
                android:textColor="@color/blue1"
                android:textSize="16sp" />
            <TextView
                android:gravity="center"
                android:background="@color/white"
                android:id="@+id/Previewquote"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="预览报价"
                android:textColor="@color/blue1"
                android:textSize="16sp" />
            <TextView
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                />




            <TextView
                android:visibility="gone"
                android:gravity="center"
                android:background="@color/white"
                android:id="@+id/TochangeintoOpportunity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue1"
                android:text="转为机会"
                android:textSize="16sp" />
            <TextView
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                />
            <TextView
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue1"
                android:text="取消"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>